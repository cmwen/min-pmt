{
  "name": "@cmwen/min-pmt-web",
  "version": "0.1.0",
  "description": "Web UI and REST API server for min-pmt with Kanban board",
  "keywords": [
    "project-management",
    "kanban",
    "web-ui",
    "preact"
  ],
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "min-pmt-web": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "prepare": "tsc -b && vite build",
