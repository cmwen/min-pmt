{
  "name": "@cmwen/min-pmt-web",
  "version": "0.1.0",
  "description": "Minimal Project Management Tool Web UI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "min-pmt-web": "dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b && cpy 'src/public/**' 'dist/public' --cwd=. --parents",
    "prepare": "tsc -b && cpy 'src/public/**' 'dist/public' --cwd=. --parents",
    "test": "vitest run",
    "lint": "biome check --write src test",
    "lint:ci": "biome check src test",
    "format": "biome format --write src test",
    "format:check": "biome format src test"
  },
  "dependencies": {
    "@cmwen/min-pmt-core": "workspace:*",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "latest",
    "@types/supertest": "latest",
    "cpy-cli": "latest",
    "supertest": "latest",
    "vitest": "latest"
  },
  "publishConfig": { "access": "public" },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmwen/min-pmt.git",
    "directory": "packages/web"
  },
  "license": "MIT",
  "author": "cmwen"
}
