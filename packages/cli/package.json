    "format:check": "biome format src test"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@cmwen/min-pmt-core": "workspace:*",
    "@cmwen/min-pmt-web": "workspace:*",
    "rolldown": "1.0.0-beta.36",
    "vitest": "latest",
    "vite": "latest"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmwen/min-pmt.git",
    "directory": "packages/cli"
  },
