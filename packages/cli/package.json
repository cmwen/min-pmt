{
  "name": "@cmwen/min-pmt",
  "version": "0.2.8",
  "description": "Minimal Project Management Tool CLI",
  "type": "module",
  "main": "dist/bundled.js",
  "bin": "dist/bundled.js",
  "files": [
    "dist/bundled.js"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:bundle": "node scripts/rolldown-bundle.js",
